<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity=""
    android:background="#0a1128"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/welcome_layout"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@id/class_buttons_layout"
            app:layout_constraintHeight_percent=".4"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_gravity="center"
                android:src="@drawable/green_math_icon_2_vector"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@+id/welcome_text"
                app:layout_constraintHeight_percent="0.6"
                app:layout_constraintHorizontal_chainStyle="spread"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.2" />

            <TextView
                android:id="@+id/text1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Válassz évfolyamot!"
                android:textColor="@android:color/white"
                android:textSize="18sp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/logo"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/welcome_text"
                app:layout_constraintWidth_percent=".35" />

            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:gravity="center"
                android:text="Üdvözlet!"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@+id/text1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/logo"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="spread"
                app:layout_constraintWidth_percent=".35" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/class_buttons_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/welcome_layout"
            app:layout_constraintVertical_bias=".1">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_sec"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_class"
                android:text="2. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/button_third"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_sixth"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.35" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_third"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_class"
                android:text="3. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/button_fourth"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_seventh"
                app:layout_constraintTop_toBottomOf="@id/button_sec"
                app:layout_constraintWidth_percent="0.35" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_fourth"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_class"
                android:text="4. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/button_fifth"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_eighth"
                app:layout_constraintTop_toBottomOf="@id/button_third"
                app:layout_constraintWidth_percent="0.35" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_fifth"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_class"
                android:text="5. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/button_ninth"
                app:layout_constraintTop_toBottomOf="@id/button_fourth"
                app:layout_constraintWidth_percent="0.35" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_sixth"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_class"
                android:text="6. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/button_seventh"
                app:layout_constraintLeft_toRightOf="@id/button_sec"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintWidth_percent="0.35" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_seventh"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_class"
                android:text="7. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/button_eighth"
                app:layout_constraintLeft_toRightOf="@id/button_third"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_sixth"
                app:layout_constraintVertical_bias=".33"
                app:layout_constraintWidth_percent="0.35" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_eighth"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_class"
                android:text="8. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toTopOf="@id/button_ninth"
                app:layout_constraintLeft_toRightOf="@id/button_fourth"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_seventh"
                app:layout_constraintVertical_bias="0.0"
                app:layout_constraintWidth_percent="0.35" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_ninth"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_marginBottom="15dp"
                android:background="@drawable/button_class"
                android:text="9. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/button_fifth"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/button_eighth"
                app:layout_constraintWidth_percent="0.35" />

        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>


</ScrollView>