<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#0a1128"
    tools:context=".BreakActivity">

    <TextView
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:text="Szünet"
        android:textColor="@android:color/white"
        android:textSize="55dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="120dp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="75dp"
        android:layout_marginBottom="0dp"
        android:orientation="horizontal"
        >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/add_tick"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/add_icon_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:src="@drawable/avd_done"
                >
            </ImageView>

            <TextView
                android:id="@+id/add_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/add_icon_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="35dp"
                android:text="+"
                >
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/sub_tick"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/sub_icon_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:src="@drawable/avd_done"
                >
            </ImageView>

            <TextView
                android:id="@+id/sub_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="20dp"
                android:background="@drawable/sub_icon_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                android:text="-"
                >
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/admix_tick"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/admix_icon_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:src="@drawable/avd_done"
                >
            </ImageView>

            <TextView
                android:id="@+id/admix_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginRight="0dp"
                android:background="@drawable/admix_icon_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                android:text="_"
                >
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/mult_tick"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/mult_icon_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:src="@drawable/avd_done"
                >
            </ImageView>

            <TextView
                android:id="@+id/mult_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/mult_icon_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                android:text="*"
                >
            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/div_tick"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/div_icon_bg"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:src="@drawable/avd_done"
                >
            </ImageView>

            <TextView
                android:id="@+id/div_icon"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/div_icon_bg"
                android:gravity="center"
                android:textColor="@android:color/white"
                android:textSize="35dp"
                android:textStyle="bold"
                android:text=":"
                >
            </TextView>

        </RelativeLayout>



    </LinearLayout>

    <LinearLayout
        android:id="@+id/backgroundScoreboard1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="80dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        >

        <TextView
            android:id="@+id/textBreakCountdown"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/scoreboard"
            android:gravity="center"
            android:text="01:00"
            android:textColor="@android:color/white"
            android:textSize="45dp"
            android:textStyle="bold" />

    </LinearLayout>


