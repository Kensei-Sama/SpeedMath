                android:text="Megoldva: 0"
                android:textColor="@android:color/white"
                android:textSize="23dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/textResultAdmix"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:text="Elért pontszám: 0"
                android:textColor="@android:color/white"
                android:textSize="23dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/textClassLevelAdmix"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:text="1. osztályos szint!"
                android:textColor="@android:color/white"
                android:textSize="23dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/backgroundScoreboard2Mult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/scoreboard"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            >

            <TextView
                android:id="@+id/textTaskTypeMult"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:text="Szorzás"
                android:textColor="@android:color/white"
                android:background="@drawable/mult_header"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/textQuestionAnsweredMult"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
