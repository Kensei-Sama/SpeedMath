                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/backgroundScoreboard2Div"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="@drawable/scoreboard"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="25dp"
            android:layout_marginRight="80dp"
            android:layout_marginLeft="80dp"
            >

            <TextView
                android:id="@+id/textTaskTypeDiv"
                android:layout_width="match_parent"
                android:layout_height="65dp"
                android:layout_marginTop="0dp"
                android:layout_marginBottom="0dp"
                android:text="Bennfoglalás"
                android:textColor="@android:color/white"
                android:background="@drawable/div_header"
                android:textSize="35dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/textQuestionAnsweredDiv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:text="Megoldva: 0"
                android:textColor="@android:color/white"
                android:textSize="23dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                />

            <TextView
                android:id="@+id/textResultDiv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:text="Elért pontszám: 0"
                android:textColor="@android:color/white"
                android:textSize="23dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/textClassLevelDiv"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginBottom="5dp"
                android:text="1. osztályos szint!"
                android:textColor="@android:color/white"
                android:textSize="23dp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_weight="1"
                />

        </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonBackMain"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/num_keyboard"
        android:text="Vissza"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        />

    </LinearLayout>
</ScrollView>