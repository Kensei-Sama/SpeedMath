<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#2e2e2e"
    tools:context=".FinishActivity">

    <TextView
        android:id="@+id/textClass"
        android:layout_width="350dp"
        android:layout_height="90dp"
        android:text="Kiértékelés"
        android:textColor="@android:color/white"
        android:textSize="55dp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        />


    <LinearLayout
        android:id="@+id/backgroundScoreboard2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/scoreboard"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginRight="80dp"
        android:layout_marginLeft="80dp"
        >

        <TextView
            android:id="@+id/textClassLevelResult"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Sikerült teljesíteni!"
            android:textColor="@android:color/white"
            android:textSize="35dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/textQuestionAnswered"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:text="Megoldva: 0"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            />

        <TextView
            android:id="@+id/textResult"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="5dp"
            android:text="Pont: allClassLevelPoints / allPoints"
            android:textColor="@android:color/white"
            android:textSize="25dp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_weight="1"
            />



    </LinearLayout>


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/buttonBackMain"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/num_keyboard"
        android:text="Vissza"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:gravity="center"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_exit"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_back"
        android:gravity="center"
        android:text="Kilépés"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold" />


</LinearLayout>