<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="#0a1128"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <ImageView
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:src="@drawable/green_math_icon_2_vector" />

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="20dp"
        android:gravity="center"
        android:text="Üdvözlet!"
        android:textColor="@android:color/white"
        android:textSize="30sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginBottom="35dp"
        android:gravity="bottom|center"
        android:text="Válassz évfolyamot!"
        android:textColor="@android:color/white"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="16"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="8"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_sec"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_class"
                android:text="2. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_third"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_class"
                android:text="3. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_fourth"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_class"
                android:text="4. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_fifth"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/button_class"
                android:text="5. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_weight="8"
            >

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_sixth"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_class"
                android:text="6. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_seventh"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_class"
                android:text="7. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_eigth"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginBottom="25dp"
                android:background="@drawable/button_class"
                android:text="8. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/button_ninth"
                android:layout_width="140dp"
                android:layout_height="60dp"
                android:layout_marginBottom="0dp"
                android:background="@drawable/button_class"
                android:text="9. osztály"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:textStyle="bold"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        >



    </LinearLayout>

</LinearLayout>